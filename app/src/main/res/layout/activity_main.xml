<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

   <ImageView
       android:id="@+id/background"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:scaleType="centerCrop"
       android:src="@drawable/background3" />

   <TextView
       android:id="@+id/balance"
       android:layout_width="82dp"
       android:layout_height="wrap_content"
       android:layout_alignParentStart="true"
       android:layout_alignParentTop="true"
       android:layout_alignParentBottom="true"
       android:layout_marginStart="39dp"
       android:layout_marginTop="154dp"
       android:layout_marginBottom="539dp"
       android:fontFamily="@font/press_start_2p"
       android:maxLength="4"
       android:text="0.0"
       android:textAllCaps="true"
       android:textColor="#3F9342"
       android:textSize="18sp" />

   <Button
       android:id="@+id/buttonReturn"
       android:layout_width="wrap_content"
       android:layout_height="60dp"
       android:layout_alignParentStart="true"
       android:layout_alignParentTop="true"
       android:layout_alignParentEnd="true"
       android:layout_alignParentBottom="false"
       android:layout_marginStart="189dp"
       android:layout_marginTop="123dp"
       android:layout_marginEnd="145dp"
       android:layout_marginBottom="548dp"
       android:backgroundTint="#FFC107"
       android:ellipsize="middle"
       android:fontFamily="@font/press_start_2p"
       android:onClick="returnMoney"
       android:padding="0dp"
       android:text="RET"
       android:textSize="12sp" />

   <Button
       android:id="@+id/buttonAdd"
       android:layout_width="77dp"
       android:layout_height="60dp"
       android:layout_alignParentStart="true"
       android:layout_alignParentTop="true"
       android:layout_alignParentEnd="true"
       android:layout_alignParentBottom="false"
       android:layout_marginStart="125dp"
       android:layout_marginTop="123dp"
       android:layout_marginEnd="209dp"
       android:layout_marginBottom="548dp"
       android:backgroundTint="#4CAF50"
       android:fontFamily="@font/press_start_2p"
       android:onClick="openAddMoneyDialog"
       android:padding="0dp"
       android:text="ADD"
       android:textSize="12sp" />

   <TextView
       android:id="@+id/output"
       android:layout_width="334dp"
       android:layout_height="111dp"
       android:layout_alignParentStart="true"
       android:layout_alignParentEnd="true"
       android:layout_alignParentBottom="true"
       android:layout_marginStart="36dp"
       android:layout_marginEnd="41dp"
       android:layout_marginBottom="34dp"
       android:fontFamily="@font/press_start_2p"
       android:textColor="#4CAF50"
       android:textSize="14sp" />

   <Button
       android:id="@+id/buyBottle1"
       android:layout_width="94dp"
       android:layout_height="wrap_content"
       android:layout_alignParentStart="true"
       android:layout_alignParentTop="true"
       android:layout_alignParentEnd="true"
       android:layout_alignParentBottom="true"
       android:layout_marginStart="275dp"
       android:layout_marginTop="199dp"
       android:layout_marginEnd="45dp"
       android:layout_marginBottom="449dp"
       android:backgroundTint="#ECE2E5"
       android:elevation="20dp"
       android:ellipsize="middle"
       android:onClick="buyButtonPress"
       android:shadowColor="#1B1B1B"
       android:shadowDx="5"
       android:shadowDy="10"
       android:shadowRadius="50"
       app:cornerRadius="75dp"
       app:rippleColor="#717171"
       app:strokeColor="#CDCDCD"
       app:strokeWidth="3dp" />

   <Button
       android:id="@+id/buyBottle2"
       android:layout_width="94dp"
       android:layout_height="wrap_content"
       android:layout_alignParentStart="true"
       android:layout_alignParentTop="true"
       android:layout_alignParentEnd="true"
       android:layout_alignParentBottom="true"
       android:layout_marginStart="275dp"
       android:layout_marginTop="289dp"
       android:layout_marginEnd="45dp"
       android:layout_marginBottom="359dp"
       android:backgroundTint="#ECE2E5"
       android:elevation="20dp"
       android:ellipsize="middle"
       android:onClick="buyButtonPress"
       android:shadowColor="#1B1B1B"
       android:shadowDx="5"
       android:shadowDy="10"
       android:shadowRadius="50"
       app:cornerRadius="75dp"
       app:rippleColor="#717171"
       app:strokeColor="#CDCDCD"
       app:strokeWidth="3dp" />

   <Button
       android:id="@+id/buyBottle3"
       android:layout_width="94dp"
       android:layout_height="wrap_content"
       android:layout_alignParentStart="true"
       android:layout_alignParentTop="true"
       android:layout_alignParentEnd="true"
       android:layout_alignParentBottom="true"
       android:layout_marginStart="275dp"
       android:layout_marginTop="380dp"
       android:layout_marginEnd="43dp"
       android:layout_marginBottom="268dp"
       android:backgroundTint="#ECE2E5"
       android:elevation="20dp"
       android:ellipsize="middle"
       android:onClick="buyButtonPress"
       android:shadowColor="#1B1B1B"
       android:shadowDx="5"
       android:shadowDy="10"
       android:shadowRadius="50"
       app:cornerRadius="75dp"
       app:rippleColor="#717171"
       app:strokeColor="#CDCDCD"
       app:strokeWidth="3dp" />

   <Button
       android:id="@+id/buyBottle4"
       android:layout_width="94dp"
       android:layout_height="wrap_content"
       android:layout_alignParentStart="true"
       android:layout_alignParentTop="true"
       android:layout_alignParentEnd="true"
       android:layout_alignParentBottom="true"
       android:layout_marginStart="275dp"
       android:layout_marginTop="476dp"
       android:layout_marginEnd="42dp"
       android:layout_marginBottom="172dp"
       android:backgroundTint="#ECE2E5"
       android:elevation="20dp"
       android:ellipsize="middle"
       android:onClick="buyButtonPress"
       android:shadowColor="#1B1B1B"
       android:shadowDx="5"
       android:shadowDy="10"
       android:shadowRadius="50"
       app:cornerRadius="75dp"
       app:rippleColor="#717171"
       app:strokeColor="#CDCDCD"
       app:strokeWidth="3dp" />

</RelativeLayout>